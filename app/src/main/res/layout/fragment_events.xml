<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/tabsviewer_padding"
    tools:context="com.example.eatmeet.mainactivityfragments.EventsFragment"
    android:weightSum="2"
    android:id="@+id/fragment_events">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="10">
    <ListView
        android:layout_weight="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_events"
        android:layout_gravity="center_horizontal" />
    <include layout="@layout/content_filter" />
    <include layout="@layout/button_filter" />
</LinearLayout>

