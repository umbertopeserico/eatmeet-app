    <ImageView
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:id="@+id/eventsImage"
        android:layout_weight="2"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp" />
    <TextView
